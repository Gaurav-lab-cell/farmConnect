<% layout("/layouts/boilerplate.ejs") %>
  <div class="mt-3">
    <h2>All vegetables</h2><br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
      <% for(vegetable of allVegetables){ %>
        <a href="/vegetables/<%= vegetable._id %>" class="vegetable-link">
          <div class="card col vegetable-card">
            <img src="<%= vegetable.image.url %>" class="card-img-top" alt="vegetable_img">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= vegetable.title %>
                </b><br>
                &#8377;<%= vegetable.price.toLocaleString("en-IN") %> / kg
              </p>
            </div>
          </div>
          <% } %>
    </div>
    </a>
  </div>